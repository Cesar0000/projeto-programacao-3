<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane
    maxHeight="480.0"
    maxWidth="800.0"
    minHeight="480.0"
    minWidth="800.0"
    prefHeight="480.0"
    prefWidth="800.0"
    xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="br.upe.controllers.HomeScreenController">
    <BorderPane
        maxHeight="480.0"
        maxWidth="800.0"
        minHeight="480.0"
        minWidth="800.0"
        prefHeight="480.0"
        prefWidth="800.0">
        <top>
            <HBox
                alignment="CENTER_LEFT"
                prefHeight="60.0"
                prefWidth="800.0"
                style="-fx-background-color: #292929;">
                <Pane prefHeight="60.0" prefWidth="800.0">
                    <children>
                        <ImageView
                            fitHeight="40.0"
                            fitWidth="66.0"
                            layoutX="14.0"
                            layoutY="10.0"
                            pickOnBounds="true"
                            preserveRatio="true">
                            <image>
                                <Image url="@../../images/logo-without-name.png" />
                            </image>
                            <effect>
                                <ColorAdjust contrast="1.0" saturation="1.0" />
                            </effect>
                        </ImageView>
                        <!-- Botão de sair -->
                        <Button
                            fx:id="exitButton"
                            layoutX="693.0"
                            layoutY="18.0"
                            style="-fx-background-color: red; -fx-text-fill: white; -fx-font-weight: bold;"
                            text="Sair"
                            onAction="#handleExitButtonClick"
                        />
                        <!-- Botão de configuração com ícone -->
                        <Button
                            fx:id="configurationButton"
                            layoutX="740.0"
                            layoutY="12.0"
                            prefHeight="35.0"
                            prefWidth="41.0"
                            style="-fx-background-color: transparent;"
                            onAction="#handleConfigurationButtonClick">
                            <graphic>
                                <ImageView
                                    fitHeight="44.0"
                                    fitWidth="36.0"
                                    pickOnBounds="true"
                                    preserveRatio="true">
                                    <image>
                                        <Image url="@../../images/ConfigButton.png" />
                                    </image>
                                    <effect>
                                        <ColorAdjust brightness="0.92" hue="0.96" />
                                    </effect>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </Pane>
            </HBox>
        </top>
        <left>
            <AnchorPane
                prefHeight="420.0"
                prefWidth="265.0"
                style="-fx-background-color: white;"
                BorderPane.alignment="CENTER">
                <children>
                    <ImageView
                        fitHeight="255.0"
                        fitWidth="259.0"
                        layoutX="12.0"
                        layoutY="60.0"
                        pickOnBounds="true"
                        preserveRatio="true">
                        <image>
                            <Image url="@../../images/logo-with-name.png" />
                        </image>
                    </ImageView>
                </children>
            </AnchorPane>
        </left>
        <center>
            <GridPane
                alignment="CENTER"
                hgap="40"
                prefHeight="498.0"
                prefWidth="534.0"
                style="-fx-padding: 20;"
                vgap="40">
                <children>
                    <!-- Primeira linha -->
                    <VBox
                        alignment="CENTER"
                        prefHeight="121.0"
                        prefWidth="210.0"
                        spacing="10.0"
                        style="-fx-border-color: black; -fx-padding: 10; -fx-border-radius: 10;"
                        GridPane.columnIndex="0"
                        GridPane.rowIndex="0">
                        <Label
                            style="-fx-font-size: 20px; -fx-wrap-text: true;"
                            text="Eventos"
                        />
                        <Label
                            prefHeight="75.0"
                            prefWidth="165.0"
                            style="-fx-font-size: 16px; -fx-wrap-text: true;"
                            text="Veja a lista de eventos disponíveis"
                            textAlignment="CENTER"
                        />
                        <Button
                            fx:id="accessEventsButton"
                            prefHeight="30.0"
                            prefWidth="193.0"
                            style="-fx-background-color: green; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;"
                            text="Acessar"
                            onAction="#handleAccessEventsButtonClick"
                        />
                    </VBox>
                    <VBox
                        alignment="CENTER"
                        prefHeight="154.0"
                        prefWidth="193.0"
                        spacing="10.0"
                        style="-fx-border-color: black; -fx-padding: 10; -fx-border-radius: 10;"
                        GridPane.columnIndex="1">
                        <Label
                            style="-fx-font-size: 20px; -fx-wrap-text: true;"
                            text="Inscrições"
                        />
                        <Label
                            prefHeight="75.0"
                            prefWidth="165.0"
                            style="-fx-font-size: 16px; -fx-wrap-text: true;"
                            text="Veja as suas inscrições"
                            textAlignment="CENTER"
                        />
                        <Button
                            fx:id="accessSubscriptionsButton"
                            prefHeight="30.0"
                            prefWidth="207.0"
                            style="-fx-background-color: green; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;"
                            text="Acessar"
                            onAction="#handleAccessSubscriptionsButtonClick"
                        />
                    </VBox>
                    <!-- Segunda linha -->
                    <VBox
                        alignment="CENTER"
                        prefHeight="148.0"
                        prefWidth="208.0"
                        spacing="10.0"
                        style="-fx-border-color: black; -fx-padding: 10; -fx-border-radius: 10;"
                        GridPane.columnIndex="0"
                        GridPane.rowIndex="1">
                        <Label
                            style="-fx-font-size: 20px; -fx-wrap-text: true;"
                            text="Submissões"
                        />
                        <Label
                            prefHeight="81.0"
                            prefWidth="204.0"
                            style="-fx-font-size: 16px; -fx-wrap-text: true;"
                            text="Veja as suas submissões"
                        />
                        <Button
                            fx:id="accessSubmissionsButton"
                            prefHeight="30.0"
                            prefWidth="191.0"
                            style="-fx-background-color: green; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;"
                            text="Acessar"
                            onAction="#handleAccessSubmissionsButtonClick"
                        />
                    </VBox>
                    <VBox
                        alignment="CENTER"
                        prefHeight="148.0"
                        prefWidth="196.0"
                        spacing="10.0"
                        style="-fx-border-color: black; -fx-padding: 10; -fx-border-radius: 10;"
                        GridPane.columnIndex="1"
                        GridPane.rowIndex="1">
                        <Label
                            style="-fx-font-size: 20px; -fx-wrap-text: true;"
                            text="Perfil"
                        />
                        <Label
                            prefHeight="46.0"
                            prefWidth="213.0"
                            style="-fx-font-size: 16px; -fx-wrap-text: true;"
                            text="Veja o seu perfil."
                            textAlignment="JUSTIFY"
                        />
                        <Button
                            fx:id="accessProfileButton"
                            prefHeight="30.0"
                            prefWidth="216.0"
                            style="-fx-background-color: green; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;"
                            text="Acessar"
                            onAction="#handleAccessProfileButtonClick"
                        />
                    </VBox>
                </children>
                <columnConstraints>
                    <ColumnConstraints minWidth="50.0" prefWidth="200.0" />
                    <ColumnConstraints minWidth="50.0" prefWidth="200.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="50.0" prefHeight="150.0" />
                    <RowConstraints minHeight="50.0" prefHeight="150.0" />
                </rowConstraints>
            </GridPane>
        </center>
    </BorderPane>
</AnchorPane>
